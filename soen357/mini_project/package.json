{
    "name": "soen357_mini_project",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --hot src/index.tsx",
        "build": "bun run tailwind:build && bun build ./src/index.html --outdir=../../docs --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
        "start": "NODE_ENV=production bun src/index.tsx",
        "tailwind:build": "bunx tailwindcss -i ./src/index.css -o ../../docs/index.css --minify"
    },
    "dependencies": {
        "@fontsource/inter": "^5.2.8",
        "@fontsource/open-sauce-sans": "^5.2.5",
        "bun-plugin-tailwind": "^0.1.2",
        "react": "^19",
        "react-dom": "^19"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "@tailwindcss/postcss": "^4.1.14",
        "@types/bun": "latest",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.14"
    }
}
